# ============================================================================
# LOCAL LLM CONFIGURATION (Default - No API costs!)
# ============================================================================

# Use local LLM via Ollama (default: true)
# Set to false to use Claude API instead
USE_LOCAL_LLM=true

# Ollama host URL (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# Default model for all tasks (default: deepseek-r1:8b)
OLLAMA_MODEL=deepseek-r1:8b

# (Optional) Separate models for different complexity levels
# OLLAMA_MODEL_LARGE is used for complex tasks (opus-equivalent): /feature, /bug, /implement, /review
# OLLAMA_MODEL_SMALL is used for simple tasks (sonnet-equivalent): /classify_issue, /commit, etc.
OLLAMA_MODEL_LARGE=deepseek-r1:14b
OLLAMA_MODEL_SMALL=deepseek-r1:8b

# ============================================================================
# CLAUDE API CONFIGURATION (Optional - only if USE_LOCAL_LLM=false)
# ============================================================================

# Anthropic API key for Claude Code CLI (only needed if USE_LOCAL_LLM=false)
ANTHROPIC_API_KEY=

# Claude Code CLI path (only needed if USE_LOCAL_LLM=false)
CLAUDE_CODE_PATH=claude

# ============================================================================
# GITHUB CONFIGURATION (Optional)
# ============================================================================

# GitHub Personal Access Token
# Use this if you want ADW to use a different GitHub account than your default 'gh auth' login
# If not set, ADW will use whatever GitHub account is authenticated with 'gh auth login'
GITHUB_PAT=

# ============================================================================
# ADVANCED CONFIGURATION (Optional)
# ============================================================================

# Returns claude code to the root directory after every command
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# Agent Cloud Sandbox Environment (E2B)
E2B_API_KEY=

# Cloudflare tunnel for exposing webhook to GitHub
CLOUDFLARED_TUNNEL_TOKEN=

# Cloudflare R2 Configuration for uploading review screenshots
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_PUBLIC_DOMAIN=
